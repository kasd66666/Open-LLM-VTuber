# Dockerfile ottimizzato per deploy GRATUITO
FROM python:3.11-slim

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONUNBUFFERED=1
ENV HF_HOME=/tmp/models
ENV MODELSCOPE_CACHE=/tmp/models

# Install system dependencies (minimal)
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    git \
    curl \
    wget \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Create temporary models directory
RUN mkdir -p /tmp/models

# Expose port
EXPOSE 12393

# Health check
HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=3 \
    CMD curl -f http://localhost:12393/ || exit 1

# Start the application
CMD ["python", "run_server.py", "--config", "conf.free.yaml", "--host", "0.0.0.0", "--port", "12393"]
